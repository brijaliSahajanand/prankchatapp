<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ru.fotostrana.socketapp.spinner.WheelView
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/wv_main_wheel"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

    <FrameLayout

        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/spin" />

    </FrameLayout>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/spin_wheel_new" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wv_main_wheel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:minWidth="@dimen/_130sdp"
            android:src="@drawable/tap"
            android:textSize="@dimen/_13sdp" />

        <!-- <ImageView
             android:id="@+id/iv_start"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_margin="@dimen/_10sdp"
             android:src="@drawable/button_spin" />-->

    </LinearLayout>
</RelativeLayout>
